<div class="box">
	<article class="media">
		<div class="media-content">
			<div class="content">
				<p>
					<strong><%= comment.comment %></strong>
				</p>
			</div>
			<div>
				<h4>posted by <%= link_to current_user.name, homepage_path(comment.user_id) %> at <%= comment.updated_at %></h4>
			</div>
			
		</div>

		<%= button_to 'Delete Comment', post_path(comment.post, comment), method: :delete, class: "button is-danger", form: { data: { turbo_confirm: 'Are you sure?' } } %>
	</article>
</div>

