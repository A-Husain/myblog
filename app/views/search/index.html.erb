<% content_for :page_title, "Search Results" %>

<strong>
<h1 class="text-center"><%= pluralize(@posts.count, "Result") %></h1>
</strong> 


<div class="container">
	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th>
					<%= sort_link(@q, :title, "Title", default_order: :asc) %>
				</th>
				<th>
					<%= sort_link(@q, :content, "Blog Content") %>
				</th>
				<th>
					<%= sort_link(@q, :user, "Users") %>
				</th>
			</tr>
		</thead>

		<tbody>
			<% @posts.each do |post| %>
				<tr>
					<td><%= link_to post.title, post %></td>
					<td><%= post.content.truncate_words(25) %></td>
					
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
