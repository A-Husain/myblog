<% content_for :page_title, "My Blog" %>

<div class="container mt-5">
	<div class="row">
		<div class="col-4">
			<%= @posts.each do |post| %>
				<div class="card mt-3">
					<div class="card-body">
						<h5 class="card-title"><%= link_to post.title, post %></h5>
						<p class="card-text"><%= post.content %></p>
						<p class="card-text"><%= post.created_at %> </p>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>


